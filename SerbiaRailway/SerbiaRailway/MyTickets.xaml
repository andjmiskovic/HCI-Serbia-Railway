<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SerbiaRailway"
      xmlns:hc="https://handyorg.github.io/handycontrol" x:Class="SerbiaRailway.MyTickets"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MyTickets">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Content="Reserved Tickets" Margin="10 0 0 0"/>
            <Button Content="Bought Tickets" Margin="10 0 0 0"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1">
            <StackPanel Orientation="Vertical">
                <local:TicketCard/>
                <local:TicketCard/>
                <local:TicketCard/>
                <local:TicketCard/>
                <local:TicketCard/>
                <local:TicketCard/>
            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>
