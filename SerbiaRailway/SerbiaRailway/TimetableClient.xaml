<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SerbiaRailway"
      xmlns:hc="https://handyorg.github.io/handycontrol" x:Class="SerbiaRailway.TimetableClient"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TimetableClient">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="12*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <hc:ComboBox Text="Starting station" ToolTip="Choose your starting point." Name="FromSelect" Margin="2" Grid.Row="1" Grid.Column="0" Background="White" VerticalAlignment="Center" FontSize="20"/>
            <hc:ComboBox Text="Ending station" ToolTip="Choose your ending point." Name="ToSelect" Margin="2" Grid.Row="1" Grid.Column="1" Background="White" VerticalAlignment="Center" FontSize="20"/>
            <hc:DatePicker ToolTip="Choose the date of your travel." Name="Date" Margin="2" Grid.Column="2" VerticalAlignment="Center" Background="White" Grid.Row="1" FontSize="20"/>
            <Button ToolTip="Click to search available timelines." Grid.Column="3" Grid.Row="1">SEARCH</Button>
        </Grid>
        <DataGrid Grid.Row="1" x:Name="TimetableTable" BorderThickness="0" GridLinesVisibility="Horizontal" HeadersVisibility="Column" RowDetailsVisibilityMode="VisibleWhenSelected" ItemsSource="{Binding timeTableCollection, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Margin="10" Background="White">
            <DataGrid.Columns>
                <DataGridTextColumn Header="START TIME" Width="*" Binding="{Binding StartTime}"/>
                <DataGridTextColumn Header="END TIME" Width="*" Binding="{Binding EndTime}"/>
                <DataGridTextColumn Header="LINE ID" Width="*" Binding="{Binding LineId}"/>
                <DataGridTextColumn Header="LINE NAME" Width="*" Binding="{Binding LineName}"/>
                <DataGridTextColumn Header="PRICE" Width="*" Binding="{Binding Price}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
